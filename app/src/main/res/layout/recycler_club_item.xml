<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/view_round_coner_white"
    android:elevation="4dp"
    android:layout_marginHorizontal="18dp"
    android:layout_marginVertical="4dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_recycler_item_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="13dp"
        android:background="@drawable/view_round_coner"
        android:src="@drawable/ic_launcher_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <TextView
            android:id="@+id/tv_recycler_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:letterSpacing="-0.03"
            android:text="인유공방"
            android:textSize="19sp"
            android:textColor="@color/font_color_black"/>

        <TextView
            android:id="@+id/tv_recycler_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다람쥐 헌쳇밧퀴에 타고파"
            android:layout_marginBottom="25dp"
            android:textColor="@color/font_color_gray"/>

    </LinearLayout>

</LinearLayout>