<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <solid android:color="@color/line_color_white_gray" />

            <corners android:radius="10dp"/>

        </shape>
    </item>

    <!--  left shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:centerColor="#00FF0000"
                android:centerX="0.98"
                android:endColor="#5CA6A6A6"
                android:startColor="#00FF0000" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!--  right shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="360"
                android:centerColor="#00FF0000"
                android:centerX="0.98"
                android:endColor="#5CA6A6A6"
                android:startColor="#00FF0000" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!--  top shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="#00FF0000"
                android:centerY="0.18"
                android:endColor="#00FF0000"
                android:startColor="#6BA6A6A6" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!--  bottom shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerColor="#00FF0000"
                android:centerY="0.11"
                android:endColor="#00FF0000"
                android:startColor="#34A6A6A6" />
            <corners android:radius="10dp" />
        </shape>
    </item>

</layer-list>