<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.INUClub" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_color_blue</item>
        <item name="colorPrimaryVariant">@color/brand_color_yellow</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- TapLayout textSize -->
    <style name="tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
    </style>

    <!-- checkBox(로그인 유지) -->
    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/brand_color_sky_blue</item>
        <item name="android:textColorSecondary">@color/brand_color_sky_blue</item>
    </style>

    <!-- Splash(로딩화면) -->
    <style name="SplashTheme" parent="Theme.INUClub">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!-- SlideImageViewer -->
    <style name="SlideImageViewerTheme" parent="Theme.INUClub">
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- DateRangePicker -->
    <style name="AppThemeMaterial" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/brand_color_blue</item>
        <item name="colorPrimaryDark">@color/brand_color_blue</item>
        <item name="colorAccent">@color/brand_color_yellow</item>
    </style>

</resources>